
<%layout("/layouts/boilerplate.ejs")%>



<body>
    <br>
    <div class="row">
        <div class="col-8 offset-2">
      
    <h3>Edit listing</h3>

    <form method="POST" action="/listings/<%=listing._id%>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="listing[title]" class="form-label" >Title</label>
            <input  name="listing[title]" type="text" value="<%=listing.title%>" class="form-control" required><br>
            <div class="invalid-feedback">Please enter valid title</div>
        </div>

        <div class="mb-3">
            <label for="listing[description]" class="from-label">Description</label>
            <textarea name="listing[description]" type="text" class="form-control" required><%=listing.description%></textarea><br>
            <div class="invalid-feedback">Please enter valid description</div>
      
        </div>
        
        <div>
            <img src="<%= originalUrl %>" height="200px" width="250px" />

        </div>
        
        <div class="mb-3">
            <label for="listing[image]" class="form-label">Image</label>
            <input name="listing[image]" type="file"  class="form-control" >
            <div class="invalid-feedback">Please enter valid image-url</div>
     
        </div>
          
        <div class="row">
            
        <div class=" mb-3 col-md-4">
            <label for="listing[price]" class="form=label">Price  </label>
            <input name="listing[price]" type="number" value="<%=listing.price%>" class="form-control"><br>
            <div class="invalid-feedback">Please enter valid price</div>
        </div>
   

        <div class="mb-3 col-md-8">
            <label for="listing[country]" class="form-label">Country</label>
            <input name="listing[country]" type="text" value="<%=listing.country%>" class="form-control" required><br>
            <div class="invalid-feedback">Please enter valid country</div>
        </div>
    </div>

        <div class="mb-3">
            <label for="listing[location]" class="form-label">Location</label>
            <input name="listing[location]" type="text" value="<%=listing.location%>" class="form-control" required><br>
            <div class="invalid-feedback">Please enter valid location</div>
        </div>
     
        <button class="btn btn-dark add-btn">Edit</button>
    </form>
    <div style="height:200px; width:100%" ></div>
          
</div>
</div>


<script>
    (() => {
      'use strict';
    //  alert("Validation JS loaded ‚úÖ");  // üîç Easy visual confirmation
    
      const forms = document.querySelectorAll('.needs-validation');
      Array.from(forms).forEach(form => {
        form.addEventListener('submit', event => {
        //  alert("Form submit triggered"); // üß™
    
          if (!form.checkValidity()) {
            event.preventDefault();
            event.stopPropagation();
          //  alert("Form is invalid ‚ùå");
          }
    
          form.classList.add('was-validated');
        }, false);
      });
    })();
    </script>

</body>
