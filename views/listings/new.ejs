

<%layout("/layouts/boilerplate.ejs")%>

<body> 
    <br>
    <div class="row">
  
   
        <div class="col-8 offset-2">
            <h3>Create a new listing</h3> 
    <form method="POST" action="/listings"  novalidate class="needs-validation" enctype="multipart/form-data">
         <div class="mb-3">
             <label for="title" class="form-label">Title</label>
             <input id="title" name="listing[title]" type="text" placeholder="Add a catchy title" class="form-control" required>
             <div class="invalid-feedback">Please enter valid title</div>
         </div>
         <div class="mb-3">
            <label for="description" class="form-label">Description</label>
             <textarea id="description" name="listing[description]" type="text" placeholder="enter the description" class="form-control" required></textarea>
             <div class="invalid-feedback">Please enter valid description</div>
            </div>
         <div class="mb-3">
            <label for="image" class="form-label">Upload Image</label>
            <input id="image" name="listing[image]" type="file" placeholder="enter the url of the image" class="form-control">
            <div class="invalid-feedback">Please enter valid image-url</div>
        </div>
     
         <div class="row">
        <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input id="price" name="listing[price]"  placeholder="1200" class="form-control" required>
            <div class="invalid-feedback">Please enter valid price</div>
        </div>
        <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country</label>
            <input id="country" name="listing[country]" type="text" placeholder="India" class="form-control" required>
            <div class="invalid-feedback">Please enter valid country name</div>
        </div>
        </div>

        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input id="location" name="listing[location]" type="text" placeholder="Udaypur,Rajastan" class="form-control" required>
            <div class="invalid-feedback">Please enter valid location</div>
        </div>
       
        <button class="btn btn-dark add-btn">Add details</button>
    </form>
</div>
</div>
    <div style="height:200px; width:100%" ></div>




    <script>
        (() => {
          'use strict';
        //  alert("Validation JS loaded ‚úÖ");  // üîç Easy visual confirmation
        
          const forms = document.querySelectorAll('.needs-validation');
          Array.from(forms).forEach(form => {
            form.addEventListener('submit', event => {
            //  alert("Form submit triggered"); // üß™
        
              if (!form.checkValidity()) {
                event.preventDefault();
                event.stopPropagation();
              //  alert("Form is invalid ‚ùå");
              }
        
              form.classList.add('was-validated');
            }, false);
          });
        })();
        </script>
        
</body>


